{
    "name": "autolanguage-vscode",
    "displayName": "Auto Language",
    "description": "Automatically switches keyboard language based on context (Arabic/English).",
    "version": "26.1.3",
    "publisher": "basheir",
    "icon": "resources/icon.png",
    "icons": {
        "default": {
            "dark": "resources/icon.png",
            "light": "resources/icon.png"
        },
        "16": {
            "dark": "resources/logo-16x16.png",
            "light": "resources/logo-16x16.png"
        },
        "32": {
            "dark": "resources/logo-32x32.png",
            "light": "resources/logo-32x32.png"
        },
        "64": {
            "dark": "resources/logo-64x64.png",
            "light": "resources/logo-64x64.png"
        },
        "128": {
            "dark": "resources/icon.png",
            "light": "resources/icon.png"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/basheir/autolanguage-vscode.git"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "autolanguage.toggle",
                "title": "Auto Language: Toggle Enabled"
            }
        ],
        "configuration": {
            "title": "Auto Language",
            "properties": {
                "autolanguage.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/Disable automatic language switching."
                },
                "autolanguage.showNotifications": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show notification when language is switched."
                },
                "autolanguage.showStatusBar": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show status in status bar."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "package":"vsce package"
    },
    "devDependencies": {
        "@types/vscode": "^1.75.0",
        "@types/node": "16.x",
        "typescript": "^4.9.5"
    }
}
